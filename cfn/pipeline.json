{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Pipeline Template for automated deployment and testing",

  "Parameters": {
    "PipelineBucket": {
      "Description": "Location of the bucket codepipeline will use for moving artifacts between actions",
      "Default": "codepipeline-us-east-1-852943352104",
      "Type": "String"
    },
    "SourceArtifactBucket": {
      "Description": "The s3 bucket name for the pipeline source artifact",
      "Default": "craft-demo-pipeline-source-bucket-us-east-1",
      "Type": "String"
    },
    "SourceArtifactKey": {
      "Description": "The s3 object key of the pipeline source artifact",
      "Default": "deployment-artifact.zip",
      "Type": "String"
    }
  },

  "Resources": {
    "CodeBuildTest": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "Name": "key-value-test",
        "Source": {"Type": "CODEPIPELINE"},
        "Artifacts": {"Type": "CODEPIPELINE"},
        "ServiceRole": {"Ref": "CodeBuildRole"},
        "Environment": {
          "Type": "LINUX_CONTAINER",
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "Image": "aws/codebuild/ubuntu-base:14.04"
        },
        "TimeoutInMinutes": 20
      }
    },
    "PipelineServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codepipeline.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "key-value-test-pipeline-service-role",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:GetBucketVersioning"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "s3:PutObject"
                  ],
                  "Resource": [
                    "arn:aws:s3:::codepipeline*"
                  ],
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "sns:*",
                    "iam:PassRole"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "cloudformation:Describe*",
                    "cloudformation:CreateStack",
                    "cloudformation:UpdateStack"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "codebuild:BatchGetBuilds",
                    "codebuild:StartBuild"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "CloudformationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "cloudformation.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": {"Fn::Sub": "key-value-cloudformation-role"},
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "autoscaling:Create*",
                    "autoscaling:Describe*",
                    "autoscaling:DeleteLaunchConfiguration",
                    "autoscaling:DeleteAutoScalingGroup",
                    "autoscaling:UpdateAutoScalingGroup",
                    "ec2:releaseAddress",
                    "ec2:Authorize*",
                    "ec2:Create*",
                    "ec2:Describe*",
                    "ec2:DisassociateRouteTable",
                    "ec2:AssociateRouteTable",
                    "ec2:allocateAddress",
                    "ec2:Delete*",
                    "ec2:RunInstances",
                    "ec2:ModifyVpcAttribute",
                    "ec2:Vpc*",
                    "elasticloadbalancing:ConfigureHealthCheck",
                    "elasticloadbalancing:CreateLoadBalancer",
                    "elasticloadbalancing:SetLoadBalancer*",
                    "elasticloadbalancing:Describe*",
                    "elasticloadbalancing:DeleteLoadBalancer",
                    "elasticloadbalancing:ModifyLoadBalancerAttributes",
                    "ec2:DetachInternetGateway",
                    "ec2:AttachInternetGateway",
                    "iam:PutRolePolicy",
                    "iam:DeleteRole*",
                    "iam:DeleteInstanceProfile",
                    "iam:AddRoleToInstanceProfile",
                    "iam:RemoveRoleFromInstanceProfile",
                    "iam:Create*",
                    "iam:PassRole",
                    "route53:ChangeResourceRecordSets",
                    "route53:Create*",
                    "route53:Describe*",
                    "route53:GetChange",
                    "route53:List*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "CodeBuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codebuild.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "key-value-codebuild-role",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "logs:*",
                    "ec2:CreateNetworkInterface",
                    "ec2:DescribeNetworkInterfaces",
                    "ec2:DeleteNetworkInterface",
                    "ec2:DescribeSubnets",
                    "ec2:DescribeSecurityGroups",
                    "ec2:DescribeDhcpOptions",
                    "ec2:DescribeVpcs",
                    "ec2:CreateNetworkInterfacePermission",
                    "ssm:GetParameters",
                    "iam:GetUser"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "s3:Get*"
                  ],
                  "Effect": "Allow",
                  "Resource": {"Fn::Sub": "arn:aws:s3:::${PipelineBucket}/*"}
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:DeleteItem"
                  ],
                  "Resource": "arn:aws:dynamodb:*:*:table/icfs-terraform"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ec2:Create*",
                    "ec2:Describe*",
                    "ec2:RunInstances"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "Pipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "Properties": {
        "Name": "key-value-pipeline",
        "RoleArn": {"Fn::GetAtt" : ["PipelineServiceRole", "Arn"] },
        "ArtifactStore": {
          "Type": "S3",
          "Location": {"Ref": "PipelineBucket"}
        },
        "Stages": [
          {
            "Name": "Source",
            "Actions": [
              {
                "Name": "Source",
                "ActionTypeId": {
                  "Category": "Source",
                  "Owner": "AWS",
                  "Provider": "S3",
                  "Version": "1"
                },
                "RunOrder": 1,
                "Configuration": {
                  "PollForSourceChanges": "true",
                  "S3Bucket": {"Ref": "SourceArtifactBucket"},
                  "S3ObjectKey": {"Ref": "SourceArtifactKey"}
                },
                "OutputArtifacts": [
                  {
                    "Name": "MyApp"
                  }
                ]
              }
            ]
          },

          {
            "Name": "Deploy",
            "Actions": [
              {
                "Name": "PersistentInfrastructure",
                "ActionTypeId": {
                  "Category": "Deploy",
                  "Owner": "AWS",
                  "Provider": "CloudFormation",
                  "Version": "1"
                },
                "RunOrder": 1,
                "Configuration": {
                  "ActionMode": "CREATE_UPDATE",
                  "Capabilities": "CAPABILITY_IAM",
                  "RoleArn": {"Fn::GetAtt" : ["CloudformationRole", "Arn"]},
                  "StackName": "persistent-resources",
                  "TemplatePath": "MyApp::persistent-resources.json",
                  "TemplateConfiguration": "MyApp::persistent-resources-parameters.json"
                },
                "InputArtifacts": [
                  {
                    "Name": "MyApp"
                  }
                ]
              },
              {
                "Name": "Consul",
                "ActionTypeId": {
                  "Category": "Deploy",
                  "Owner": "AWS",
                  "Provider": "CloudFormation",
                  "Version": "1"
                },
                "RunOrder": 2,
                "Configuration": {
                  "ActionMode": "CREATE_UPDATE",
                  "Capabilities": "CAPABILITY_IAM",
                  "RoleArn": {"Fn::GetAtt" : ["CloudformationRole", "Arn"]},
                  "StackName": "consul",
                  "TemplatePath": "MyApp::consul.json",
                  "TemplateConfiguration": "MyApp::consul-parameters.json"
                },
                "InputArtifacts": [
                  {
                    "Name": "MyApp"
                  }
                ]
              }
            ]
          },
          {
            "Name": "Test",
            "Actions": [
              {
                "Name": "CodeBuild",
                "ActionTypeId": {
                  "Category": "Test",
                  "Owner": "AWS",
                  "Provider": "CodeBuild",
                  "Version": "1"
                },
                "RunOrder": 1,
                "Configuration": {
                  "ProjectName": "key-value-test"
                },
                "InputArtifacts": [
                  {
                    "Name": "MyApp"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  }
}


